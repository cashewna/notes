---
import BaseLayout from "../../layouts/BaseLayout.astro";

const posts = await Astro.glob("../../pages/courses/comp1521/*.md");
---

<BaseLayout title="COMP1521 Notes">
	<h1>COMP1521 - Computer Systems Fundamentals</h1>
	<ul>
		{
			posts.map((post) => (
				<li>
					<a href={post.url}>{post.frontmatter.title}</a>
				</li>
			))
		}
	</ul>
</BaseLayout>
